<% if !session[:signed].nil? %>
  <h4>Create new event</h4>

  <%= form_for @event do |f| %>
    <p><%= f.label :title %>
    <%= f.text_field :title %></p>

    <p><%= f.label :description %>
    <%= f.text_area :description %></p>

    <p><%= f.label :date %>
    <%= f.datetime_select :date %></p>

    <%= f.submit "Create Event" %>
  <% end %>
<% else %>
  <h4>You must be logged in to create an event.</h4>
<% end %>