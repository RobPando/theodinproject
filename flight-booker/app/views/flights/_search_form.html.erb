<%= form_tag(flights_path, method: :get) do %>
  <p><%= label_tag('search[from]', "From") %>
  <%= select_tag('search[from]', options_for_select(@airports,
                 selected: 6)) %>

  <%= label_tag('search[to]', "To") %>
  <%= select_tag('search[to]', options_for_select(@airports,
                 selected: 10)) %></p>

  <%= label_tag('search[passengers]', "Number of Passengers") %>
  <%= select_tag('search[passengers]', options_for_select(@passengers)) %>
  </p>

  <%= label_tag('search[date]', "Date") %>
  <%= datetime_select('search[date]', 'date', discard_hour: true, 
                      discard_minute: true) %></p>

  <p><%= submit_tag("Search", name: nil) %></p>
<% end %>