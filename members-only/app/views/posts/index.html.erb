<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <% if signed_in? %>
        <th>Author</th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <% if signed_in? %>
          <th> <%= User.find_by(id: post.user_id).name %> </th>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if signed_in? %>
  <%= link_to 'New Post', new_post_path %>
<% end %>